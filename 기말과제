button.toggle-btn {
    background: #aa60e6;
    color: #fff;
    padding: 0.5rem 1rem;
    border: none;
    cursor: pointer;
    margin-bottom: 1rem;
    border-radius: 3px;
}

button.toggle-btn:hover {
    background: #ecb0e4;
}

.description {
    display: none;
    margin-top: 1rem;
}

.quote {
    font-size: 1.1rem;
    color: #555;
    margin-top: 1rem;
    padding-left: 1rem;
    border-left: 4px solid #ddc7e9;
}

a {
    color: #f3b9e4;
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
}

// 모든 설명 보기/숨기기 버튼에 이벤트 리스너 추가
document.querySelectorAll('.toggle-btn').forEach(button => {
    button.addEventListener('click', () => {
        // 버튼과 같은 섹션에 있는 설명 요소를 찾음
        const description = button.nextElementSibling;
        
        // 설명을 보이거나 숨김
        if (description.style.display === 'block') {
            description.style.display = 'none';
        } else {
            description.style.display = 'block';
        }
    });
});
